    <button onclick="alertWithWindow()">alert method</button>
    
    <script>
        function alertWithWindow(){
            window.alert("text in alert")
        }
    </script>

<button onclick="documentWrite()">document to write</button>
    
<script>
    function documentWrite(){
        document.write("document to write method")
    }
</script>
<button onclick="consoleWrite()">console log</button>
<script>
    function consoleWrite() {
          console.log("displaying output on console");
    }
</script>
<button onclick="updateInnerHtml()">update Ineer html</button>
<script>
    function updateInnerHtml(){
        document.getElementById("demo").innerHTML = "<h3>Hello JavaScript!</h3>";
    }
</script>

