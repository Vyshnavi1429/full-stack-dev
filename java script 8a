<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Larger Number Output</title>
    <style>
      h1,h2{
        font-size: 60px;
        text-align: center;
      }
      button{
        padding: 40px;
        
      }
    </style>
    <script type="text/javascript">
        function findLargerNumber() {
            // Get the numbers from user input
            let num1 = parseInt(prompt("Enter the first integer:"));
            let num2 = parseInt(prompt("Enter the second integer:"));
            let num3 = parseInt(prompt("Enter the third integer:"));

            // Compare the numbers and create the result message
            let result;
            if (num1 === num2 && num2 === num3) {
                result = "EQUAL NUMBERS";
            } else if (num1 >= num2 && num1 >= num3) {
                result = num1 + " LARGER NUMBER";
            } else if (num2 >= num1 && num2 >= num3) {
                result = num2 + " LARGER NUMBER";
            } else {
                result = num3 + " LARGER NUMBER";
            }

            // Display the result in an alert box
            alert(result);
        }
    </script>
</head>
<body>
  <h1>find largest Number</h1>
    <button onclick="findLargerNumber()"type="button" style="background-color:#24A0ED ;margin-left:auto;
    margin-right:auto;display:block;margin-top:12%;margin-bottom:0%"><h3>Enter numbers</h3></button>
    <h2>click the button to enter the numbers</h2>
</body>
